<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#FFFFFF"
    android:layout_marginBottom="10dp">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="90dp"
         android:layout_alignParentLeft="true"
         android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_time"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:text="2018-02-09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="14dp" />

            </LinearLayout>
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:text="工人：080912366"
                android:textSize="18dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_video_recycler_answer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="接听"
                android:background="@drawable/answer_button"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_video_recycler_hangup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/hangup_button"
                android:text="挂断"
                android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btn_check"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="查看"
            android:textSize="14dp"
            android:focusable="false"
            android:textColor="#659BF9"
            android:background="@drawable/button_shape"
            />
        </LinearLayout>
</RelativeLayout>
